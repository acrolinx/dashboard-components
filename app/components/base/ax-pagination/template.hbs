<nav
  role="navigation"
  aria-label={{t "shared.components.pagination.title"}}
>
  {{#let (eq @currentPage 1) as |disabled|}}
    {{#base/ax-button
      iconButton=true
      primary=true
      onClick=(action "previousPage")
      disabled=disabled
    }}
      {{base/ax-icon
        name="keyboard_arrow_left"
        ariaHidden=disabled
        ariaLabel=(t "shared.components.pagination.switchPageButton" page=previousPage)
      }}
    {{/base/ax-button}}
  {{/let}}

  <input
    type="number"
    max={{@pagesCount}}
    min="1"
    value={{@currentPage}}
    oninput={{action "updatePage" value="target.value"}}
    aria-current="true"
    aria-label={{t "shared.components.pagination.currentPage" page=@currentPage}}
  >

  {{#let (eq @currentPage @pagesCount) as |disabled|}}
    {{#base/ax-button
      iconButton=true
      primary=true
      onClick=(action "nextPage")
      disabled=disabled
    }}
      {{base/ax-icon
        name="keyboard_arrow_right"
        ariaHidden=disabled
        ariaLabel=(t "shared.components.pagination.switchPageButton" page=nextPage)
      }}
    {{/base/ax-button}}
  {{/let}}

  <span>
    {{t "shared.baseComponents.pagination.pageCount" pagesCount=@pagesCount}}
  </span>
</nav>
