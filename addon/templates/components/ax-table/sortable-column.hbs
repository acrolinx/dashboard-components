<th
  role="button"
  class="md-column md-column--sortable {{@classNames}} {{if active "md-column--active"}}"
  {{action @tableAPI.updateSort @sortBy}}
>
  {{yield}}

  {{#if active}}
    {{#if (eq @tableAPI.direction "asc")}}
      {{ax-icon name=@ascIconName size=@iconSize}}
    {{else}}
      {{ax-icon name=@descIconName size=@iconSize}}
    {{/if}}
  {{else}}
    {{ax-icon name="" size=@iconSize}}
  {{/if}}
</th>
